<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/answer_record_activity_background">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_112"
        android:layout_marginTop="@dimen/dp_60"
        android:background="@drawable/user_info_title">

        <TextView
            android:id="@+id/answer_record_user_info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="@dimen/sp_15" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_195"
        android:layout_marginTop="@dimen/dp_160">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/answer_record_rv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/answer_record_rv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/answer_record_rv1" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/answer_record_rv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/answer_record_rv1"
            android:layout_marginTop="@dimen/dp_10" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_answer_record_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_220"
        android:layout_marginRight="@dimen/dp_120">

        <TextView
            android:id="@+id/tv_answer_record_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/score"
            android:gravity="center"
            android:text="0"
            android:textColor="#b72a30"
            android:textSize="@dimen/sp_42" />

        <TextView
            android:id="@+id/tv_answer_record_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_answer_record_score"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_42"
            android:text="时间:"
            android:textColor="#b72a30"
            android:textSize="@dimen/sp_20" />

        <TextView
            android:id="@+id/tv_answer_record_accuracy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_answer_record_time"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_24"
            android:text="时间:"
            android:textColor="#b72a30"
            android:textSize="@dimen/sp_20" />


        <Button
            android:id="@+id/btn_answer_record_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_answer_record_accuracy"
            android:layout_centerHorizontal="true"
            android:background="@drawable/confirm_button_selector"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/colorwhite"
            android:textSize="@dimen/sp_24" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/answer_record_websocket_status"
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_10" />

    <Button
        android:id="@+id/btn_answer_record_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="重试" />
</RelativeLayout>