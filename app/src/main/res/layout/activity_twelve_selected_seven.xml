    <ImageView
        android:id="@+id/twelve_selected_seven_background_l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/twelve_selected_seven_background_r"

        android:scaleType="fitXY"
        android:src="@drawable/scroll_left" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_111"
        android:layout_marginTop="@dimen/dp_66"
        android:background="@drawable/user_info_title">

        <TextView
            android:id="@+id/twelve_selected_seven_title_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="桌号:123      考生:123      第12题" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_145"
        android:layout_marginRight="@dimen/dp_150"
        android:background="@drawable/circle_background_shape1">

        <TextView
            android:id="@+id/twelve_selected_seven_count_down"
            android:layout_width="@dimen/dp_64"
            android:layout_height="@dimen/dp_64"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="30"
            android:textSize="@dimen/sp_36" />
    </RelativeLayout>


    <!--确认按钮-->

    <RelativeLayout
        android:id="@+id/twelve_selected_seven_question_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_160">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/twelve_selected_seven_question_recyclerview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:overScrollMode="never">

        </android.support.v7.widget.RecyclerView>

