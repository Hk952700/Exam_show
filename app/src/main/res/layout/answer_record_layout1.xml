<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/answer_record_1_question_num"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/answer_record_item_shape"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_17" />

        <TextView
            android:id="@+id/answer_record_1_user_answer"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_30"
            android:layout_toRightOf="@+id/answer_record_1_question_num"
            android:background="@drawable/answer_record_item_shape"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_17" />

        <TextView
            android:id="@+id/answer_record_1_right_answer"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_30"
            android:layout_toRightOf="@+id/answer_record_1_user_answer"
            android:background="@drawable/answer_record_item_shape"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_17" />


        <RelativeLayout
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_30"
            android:layout_toRightOf="@+id/answer_record_1_right_answer"
            android:background="@drawable/answer_record_item_shape">

            <ImageView
                android:id="@+id/iv_answer_record_1_result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_5" />

            <TextView
                android:id="@+id/tv_answer_record_1_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_17" />

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>