<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_100"
        android:layout_marginRight="@dimen/dp_220"
        android:text="国学世界行登录平台"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/sp_33" />

    <RelativeLayout
        android:id="@+id/login_candidate_relativelayout"
        android:layout_width="@dimen/dp_393"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_182"
        android:layout_marginRight="@dimen/dp_168"
        android:background="@drawable/ed_shape">


        <TextView
            android:id="@+id/login_candidate_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_24"
            android:text="考号|"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_22" />
        <!--考号-->
        <EditText
            android:id="@+id/login_candidate_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_toRightOf="@+id/login_candidate_text"
            android:digits="0123456789."
            android:hint="请输入考号"
            android:inputType="number"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorBlack"
            android:textSize="@dimen/sp_22" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/login_ip_relativelayout"
        android:layout_width="@dimen/dp_393"
        android:layout_height="@dimen/dp_50"
        android:layout_below="@+id/login_candidate_relativelayout"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_66"
        android:layout_marginRight="@dimen/dp_168"
        android:background="@drawable/ed_shape">


        <TextView
            android:id="@+id/login_ip_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_24"
            android:text="   IP  |"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_22" />

        <!--ip-->
        <EditText
            android:id="@+id/login_ip_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/login_ip_text"
            android:digits="0123456789."
            android:hint="请输入ip"
            android:inputType="number"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorBlack"
            android:textSize="@dimen/sp_22" />
    </RelativeLayout>
    <!--确认按钮-->

    <Button
        android:id="@+id/login_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_ip_relativelayout"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_120"
        android:layout_marginRight="@dimen/dp_297"
        android:background="@drawable/confirm_button_selector"
        android:gravity="center"
        android:text="@string/confirm_button"
        android:textColor="@color/colorwhite"
        android:textSize="@dimen/sp_24" />

