<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/answer_back">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_marginBottom="@dimen/dp_76"
        android:scaleType="fitXY"
        android:src="@drawable/scroll_back" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/nine_selected_five_title2_back"
        android:layout_width="@dimen/dp_180"
        android:layout_height="@dimen/dp_230"

        android:layout_marginLeft="@dimen/dp_95"
        android:layout_marginTop="@dimen/dp_85" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_111"
        android:layout_marginTop="@dimen/dp_66"
        android:background="@drawable/user_info_title">

        <TextView
            android:id="@+id/nine_selected_five_title_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="桌号:123      考生:123      第12题" />

    </RelativeLayout>

    <!--  <RelativeLayout
          android:layout_width="wrap_content"
